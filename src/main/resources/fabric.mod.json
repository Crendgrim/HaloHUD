{
  "schemaVersion": 1,
  "id": "halohud",
  "version": "${version}",

  "name": "Halo HUD",
  "description": "Small halo style indicator around the crosshair for health and hunger.",
  "authors": [
    "Crendgrim"
  ],
  "contact": {
    "sources": "https://github.com/Crendgrim/HaloHUD",
    "issues": "https://github.com/Crendgrim/HaloHUD/issues"
  },

  "license": "LGPL-3.0",
  "icon": "assets/halohud/icon.png",

  "environment": "client",
  "entrypoints": {
    "client": [
      "mod.crend.halohud.HaloHud"
    ],
    "modmenu": [
      "mod.crend.halohud.config.ModMenuIntegration"
    ]
  },

  "mixins": [
    "halohud.mixins.json"
  ],

  "depends": {
    "fabric-key-binding-api-v1": "*",

    "fabricloader": "*",
    "minecraft": ">=1.19.3",
    "java": "*"
  },
  "suggests": {
  }
}
